{
	"manifest_version": 2,

	"name": "Captcha'd",
	"description": "Makes sure that you're very very real human.",
	"version": "0.1",
	"permissions": [
	 "storage",
	 "http://www.facebook.com/*",
	 "https://www.facebook.com/*"
	],
	"icons": {},
	"web_accessible_resources": [
    	"captcha.html",
    	"captcha.js"
   	],
	"background": {
		"scripts": ["vendor/jquery-1.11.1.min.js"]
	},
	"content_scripts": [ {
		"js": ["vendor/jquery-1.11.1.min.js", "scripts/index.js", "vendor/jquery.facedetection.min.js"],
		"run_at": "document_end",
		"matches": [ "http://www.facebook.com/*", "https://www.facebook.com/*" ]
	}]
}
